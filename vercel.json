{
  "version": 2,
  "builds": [
    {
      "src": "app/package.json",
      "use": "@vercel/next@latest",
      "config": {
        "distDir": ".next",
        "installCommand": "npm install --legacy-peer-deps",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app/$1"
    }
  ],
  "build": {
    "env": {
      "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
    }
  }
}